# Development environment configuration
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:azli1970@localhost:5432/freetask?schema=public"

# JWT Configuration
JWT_SECRET="super-secret-key"
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (empty for dev wildcard fallback - allows all localhost origins)
# This is essential for Flutter Web development as it uses random ports
ALLOWED_ORIGINS=*

# Public base URL for generating upload/resource URLs
PUBLIC_BASE_URL=http://localhost:4000

# API listening port
PORT=4000

# Trust proxy headers (false for local development)
TRUST_PROXY=false

# Upload directory
UPLOAD_DIR=./uploads
