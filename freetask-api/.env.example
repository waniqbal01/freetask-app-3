# Copy this file to .env and adjust the values for your environment.

# Database connection string
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/freetask?schema=public

# JWT configuration
JWT_SECRET=change_me
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=14d

# Server configuration
PORT=4000
NODE_ENV=development

# Uploads
UPLOAD_DIR=uploads
PUBLIC_BASE_URL=http://localhost:4000
PUBLIC_BASE_URL_STRICT=true
TRUST_PROXY=false

# CORS â€“ required in production; include every frontend origin
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://10.0.2.2:4000

# Database seed controls (safe by default)
SEED_FORCE=false
SEED_RESET=false
