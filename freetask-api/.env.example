# Database connection string
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/freetask?schema=public

# JWT configuration
JWT_SECRET=CHANGE_ME_SUPER_SECRET
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=14d

# Server configuration
PORT=4000
# Relative or absolute path for uploads directory
UPLOAD_DIR=uploads
# Public URL used for generating absolute upload links. Required in production.
# Examples: http://localhost:4000 (local dev), http://192.168.1.10:4000 (LAN), https://api.example.com (prod)
PUBLIC_BASE_URL=http://localhost:4000
# Toggle strict host enforcement for PUBLIC_BASE_URL (set to false if behind a reverse proxy)
PUBLIC_BASE_URL_STRICT=true
# Trust X-Forwarded-* headers when generating upload URLs (enable when behind ingress/proxy)
TRUST_PROXY=false
# Comma separated origins (no spaces). Required in production â€“ the server will refuse
# to start if left empty. Include Flutter web/dev/emulator hosts when needed.
# Examples: http://localhost:3000 (Flutter web dev), http://localhost:5173 (Vite), http://10.0.2.2:3000 (Android emulator webview),
#           http://localhost:4000 (web preview), http://127.0.0.1:4000 (LAN/iOS simulator)
# Default below works for local web/dev without edits after copying to .env
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://10.0.2.2:3000,http://localhost:4000,http://127.0.0.1:4000

# Database seed controls (safe by default)
# SEED_FORCE=true forces seeding even when data exists.
# SEED_RESET=true wipes demo tables first (destructive; local/dev only).
SEED_FORCE=false
SEED_RESET=false
